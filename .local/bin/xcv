#!/bin/bash
THEME_DIR=$HOME/.config/xres/themes

if [ ! -d $THEME_DIR ]; then
	echo directory  ~/.config/xres/themes/ does not exist
fi

if [ -f $THEME_DIR/$1 ]; then
	xrdb -DTHEME="<$THEME_DIR/$1>" -merge ~/.Xresources
	exit 0
fi

if [ -f $1 ]; then
	xrdb -DTHEME="<$(pwd)/$1>" -merge ~/.Xresources
	exit 0
fi

echo theme not found
exit 1

